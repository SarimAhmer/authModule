		.contain {
			margin-bottom: 10px;
		}
		button {
			background-color: slateblue;
			border-radius: 20%;
			border: 1px solid black;
			font-size: 30;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}
        button:hover{
            background-color: white;
        }
		.fcc-btn {
        background-color: #199319;
        color: white;
        padding: 15px 25px;
        text-decoration: none;
      }
	  a:hover {
            color: black;
            font-size: 200%;
            border-radius: 50%;
        } 
		form {
			padding-top: 20px;
			padding-bottom: 20px;
			width: 30%;
			height: auto;
			display: flex;
			flex-direction: column;
			align-items: center;
			background-color: cadetblue;
			color: beige;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			border-radius: 10%;
		}
		h1 {
			color: seashell;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}
		.sidebar {
            background-color: #333;
            color: #fff;
            padding: 15px;
            text-align: center;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: space-around;
        }

        .sidebar li {
            margin: 0;
        }

        .sidebar a {
            text-decoration: none;
            color: #fff;
        }

        main {
            padding: 20px;
			background-color: white;
			display: flex;
			align-items: center;
			justify-content: center;
			height: 100vh;
			margin-top: 20px;
			flex-direction: column;
        }
		h2 {
			animation: blinker 1s linear infinite;
			margin-top: 20px;
		}
		@keyframes blinker {
				50% {
					opacity: 0;
				}
			}
	</style>
</head>

<body>
	<%- include('../sidebar.ejs') %>
	<main>
		<form action="/users/updateuser" method="POST">
				<h1>Update User</h1>
				<div class="contain">
					<input type="hidden" name="username" value="<%= user.username %>">
				</div>	
				<div class="contain">
					<label for="fullname">Full Name</label><br>
					<input type="text" name="fullname" value="<%= user.fullname %>">
				</div>
				<div class="contain">
					<label for="email">Email</label><br>
					<input type="email" name="email" value="<%= user.email %>">
				</div>
				<div class="contain">
					<label for="userrole">Pick A User role</label><br>
					<select name="userrole" value="<%= user.userrole %>">
						<% roles.forEach(role => { %>
							<option><%= role.rolename %></option>
						<% }); %>
					</select>
				</div>
				<div class="contain">
					<input type="hidden" name="password">
				</div>
				<p class="error"><%= error %></p>
				<button>Update</button>
			</form>
	</main>		
</body>



