		.contain {
			margin-bottom: 10px;
		}
		button {
			background-color: slateblue;
			border-radius: 20%;
			border: 1px solid black;
			font-size: 30;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}
        button:hover{
            background-color: white;
        }
		.fcc-btn {
        background-color: #199319;
        color: white;
        padding: 15px 25px;
        text-decoration: none;
      }
	  a:hover {
            color: black;
            font-size: 200%;
            border-radius: 50%;
        } 
		form {
			padding-top: 20px;
			padding-bottom: 20px;
			width: 30%;
			height: auto;
			display: flex;
			flex-direction: column;
			align-items: center;
			background-color: cadetblue;
			color: beige;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			border-radius: 10%;
			margin-top: 20px;
		}
		h1 {
			color: seashell;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}
		.sidebar {
            background-color: #333;
            color: #fff;
            padding: 15px;
            text-align: center;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: space-around;
        }

        .sidebar li {
            margin: 0;
        }

        .sidebar a {
            text-decoration: none;
            color: #fff;
        }

        main {
            padding: 20px;
			background-color: white;
			display: flex;
			align-items: center;
			justify-content: center;
			height: 100vh;
			margin: 0;
        }
		h2{
			margin-top: 20px;
		}
	</style>
</head>
<body>
	<%- include('../sidebar.ejs') %>

	<main>
		<form action="/roles/updaterole" method="POST">
			<h1>Edit Role</h1>
			<div class="contain">
				<label for="rolename">Role Name</label><br>
				<input type="text" name="rolename" value="<%= role.rolename %>" readonly>
			</div>
			<div class="contain">
				<input type="checkbox" name="add"  <% if (role.add) { %>checked<% } %>>
				<label for="add">Add</label><br>
			</div>
			<div class="contain">
				<input type="checkbox" name="update" <% if (role.update) { %>checked<% } %>>
				<label for="update">Update</label><br>
			</div>
			<div class="contain">
				<input type="checkbox" name="Delete" <% if (role.delete) { %>checked<% } %>>
				<label for="delete">Delete</label><br>
			</div>
			<div class="contain">
				<input type="checkbox" name="view" <% if (role.view) { %>checked<% } %>>
				<label for="view">View</label><br>
			</div>			
			<button>Add</button><br>
			<a class="fcc-btn" href="/roles/rolelist">View Roles</a>
		</form>		
	</main>
</body>